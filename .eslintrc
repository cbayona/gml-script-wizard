{
  "plugins": [
    "react"
  ],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "react/prop-types": 1,
    "react/no-unescaped-entities": 0,
    "quotes": [1, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  }
}